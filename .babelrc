{
  "presets": [
    [
      "env",
      {
        "modules": false,
        "targets": {
          "browsers": [
            "> 1%",
            "last 2 versions",
            "not ie <= 8"
          ]
        }
      }
    ],
    "stage-2"
  ],
  "plugins": [
    "transform-runtime"
  ],
  "env": {
    "test": {
      "plugins": [
        "istanbul"
      ],
      "presets": [
        "env",
        "stage-2"
      ]
    },
    "development": {
      "plugins": [
        "syntax-flow",
        "tcomb",
        "transform-flow-strip-types"
      ]
    },
    "production": {
      "plugins": [
        "syntax-flow",
        "transform-flow-strip-types"
      ]
    }
  }
}
